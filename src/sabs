#!/bin/sh

source ~/.config/sabs.conf
cd ~/.abs-pkg

abs_root() {
	$SABS_SUDO $@
}

log() {
	echo -e "\e[1;34m::\e[0m" $@
}

usage() {
	echo "Usage: sabs <build|ebd|ebb>"
	exit 255
}

gen_patch() {
	patch < $1

	log "Opening shell..."
	echo "The patch is automatically generated when you close this shell."
	echo "Use this shell to modify the package files"

	export PS1="(sabs) $PS1"
	bash

	diff -r orig-src . > "$1"
	log "Generating patch..."
}

init_build() {
	log "Initializing build"

	cp -R orig-src src
	cd src
}

download_sources() {
	log "Downloading sources"

	patch < ../predownload.patch
	makepkg -so
}

do_build() {
	log "Started actual build"

	patch < ../prebuild.patch
	makepkg -si
}

cleanup_build() {
	log "Started cleanup after build"

	cd ..
	rm -rf src
}

update() {
	cd ~/.abs-pkg/$1

	./update
}

full_build() {
	init_build
	download_sources
	do_build
	cleanup_build
}

case $1 in
	"update")
		if [[ -z $2 ]]
		then
			log "Updating all packages"

			for dir in $(ls -1 ~/.abs-pkg/)
			do

				if update $dir
				then
					cd ~/.abs-pkg/$dir
					full_build
				fi

			done
		else

			log "Updating $2"
			if update $2
			then
				cd ~/.abs-pkg/$2
				pwd
				full_build
			fi

		fi
		;;
	"build")
		log "Building $2..."
		cd ~/.abs-pkg/$2

		if [[ -z $2 ]]
		then
			echo "Usage: sabs build <package>"
			exit 255
		fi

		full_build
		;;
	"ebd")
		log "Generating pre-download patch"
		cd ~/.abs-pkg/$2

		init_build # do not build or install dependencies
		gen_patch ../predownload.patch
		log "Downloading sources"
		makepkg -so
		do_build
		cleanup_build
		;;
	"ebb")
		log "Generating pre-build patch"
		cd ~/.abs-pkg/$2

		init_build
		download_sources # do not build, just install sources and dependencies
		gen_patch ../prebuild.patch

		log "Started actual build"
		makepkg -si

		cleanup_build
		;;
	*)
		usage
		;;
esac
